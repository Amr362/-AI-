modules = ["python-3.12", "cpp-clang14", "nodejs-20", "c-clang14"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "cd arabic-video-maker-api && python src/main.py"]
build = ["sh", "-c", "cd arabic-video-maker && npm run build"]

[workflows]
